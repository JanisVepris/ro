{% from '@Admin/AdminLayout/macros.html.twig' import table_action_edit %}
{% from '@Admin/AdminLayout/macros.html.twig' import table_action_delete %}

<div>
    <h4><a href="{{ path('admin_lyrics_add', {'eventId': event.id}) }}">Pridėti dainos tekstą</a></h4>
</div>
<table class="table table-hover table-striped">
    <thead>
    <th>Pavadinimas</th>
    <th>Veiksmai</th>
    </thead>
    <tbody>
    {% if event.hasLyrics %}
        {% for lyric in lyrics.lyricList %}
            <td>{{ lyric.title }}</td>
            <td>
                <div class="btn-group">
                    {{ table_action_edit(path('admin_lyrics_edit', {'eventId': event.id, 'lyricId': lyric.id})) }}
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        {#{{ table_action_delete(path('admin_articles_delete', {'eventId': event.id, 'articleId': article.id })) }}#}
                    {% endif %}
                </div>
            </td>
        {% endfor %}
    {% else %}
        <td colspan="2">Nėr dainų tekstų :(</td>
    {% endif %}
    </tbody>
</table>
